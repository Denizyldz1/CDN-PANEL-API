@model ImageUploadModel
@{
    ViewData["Title"] = "Save";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Yeni Resim Yükle</h3>
            <form class="forms-sample" method="post" asp-controller="File" asp-action="Save" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Resim Ekle</label>
                    <input asp-for="File" name="File" type="file" class="form-control" id="file">
                </div>
                <button type="submit" class="btn btn-info me-2">Kaydet</button>
            </form>
            @if (ViewBag.Error != null)
            {
                <div>
                    <label class="text-danger">@ViewBag.Error</label>
                </div>
            }
        </div>
    </div>
</div>


